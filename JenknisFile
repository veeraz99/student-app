pipeline {
    agent { label "slave-1" }

    stages {

        stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/veeraz99/student-app.git',
                        credentialsId: 'c35ed247-8b81-4519-8d80-2618ead5f519'
                    ]]
                ])
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Deploy to Artifactory') {
            steps {
                configFileProvider(
                    [configFile(fileId: "fe1ffed2-8e4b-4290-9295-43d25a1ffca8", variable: 'MAVEN_SETTINGS')]
                ) {
                    sh 'mvn deploy -s $MAVEN_SETTINGS'
                }
            }
        }
    }
}
